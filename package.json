{
	"name": "nodejs-template",
	"version": "0.0.1",
	"main": "index.js",
	"repository": "",
	"author": "",
	"license": "ISC",
	"scripts": {
		"start": "env-cmd -f ./config/prod.env node -r ts-node/register/transpile-only src/app.ts",
		"dev": "env-cmd -f ./config/dev.env node -r ts-node/register/transpile-only src/app.ts",
		"build": "tsc",
		"lint": "eslint --ext .js,.ts ./src",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|js|json)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"validate": "npm run check-format && npm run lint",
		"prepare": "husky install",
		"generate-migration": "drizzle-kit generate:pg --out src/interfaces/database/migrations --schema src/interfaces/database/schema.ts",
		"migrate": "env-cmd -f ./config/dev.env ts-node src/interfaces/database/migrate"
	},
	"dependencies": {
		"chalk": "5.3.0",
		"drizzle-orm": "0.30.7",
		"pg": "8.11.5",
		"tsconfig-paths": "4.2.0"
	},
	"devDependencies": {
		"@types/node": "20.12.7",
		"@types/pg": "8.11.5",
		"@typescript-eslint/eslint-plugin": "^7.6.0",
		"@typescript-eslint/parser": "^7.6.0",
		"drizzle-kit": "0.20.14",
		"env-cmd": "10.1.0",
		"eslint": "8.57.0",
		"eslint-config-airbnb": "19.0.4",
		"eslint-config-airbnb-typescript": "18.0.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-react": "7.34.1",
		"eslint-plugin-react-hooks": "4.6.0",
		"husky": "^9.0.11",
		"jest": "29.7.0",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"ts-node": "10.9.2",
		"ts-node-dev": "2.0.0",
		"typescript": "5.4.5",
		"typescript-eslint": "7.6.0"
	}
}
